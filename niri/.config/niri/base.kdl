// ============================================================================
// BASE CONFIGURATION
// ============================================================================
// Core settings: general preferences, input devices, environment variables

hotkey-overlay {
    skip-at-startup
}

prefer-no-csd

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

// ============================================================================
// INPUT
// ============================================================================

input {
    keyboard {
        repeat-delay 200
        repeat-rate 35
        numlock
        xkb {
            layout "us"
        }
    }

    touchpad {
        tap
    }

    mouse {
        accel-profile "flat"
    }

    trackpoint {
    }
}

// ============================================================================
// ENVIRONMENT
// ============================================================================

environment {
    QT_QPA_PLATFORM "wayland"
    QT_QPA_PLATFORMTHEME "qt6ct"
    QT_QPA_PLATFORMTHEME_QT6 "qt6ct"

    XDG_CURRENT_DESKTOP "niri"
    // XDG_MENU_PREFIX "arch-"
    ELECTRON_OZONE_PLATFORM_HINT "auto"

    GTK_DECORATION_LAYOUT ":"
}
